# env/.env.example

# === Intercred Modernization - Backend Environment Example ===
# Copy this file to .env and fill in the values for your local/dev environment.

# --- General ---
SPRING_PROFILES_ACTIVE=dev

# --- Server ---
SERVER_PORT=8080

# --- Database ---
DB_HOST=localhost
DB_PORT=5432
DB_NAME=intercred
DB_USER=intercred_user
DB_PASSWORD=intercred_pass

# JDBC URL example for PostgreSQL:
SPRING_DATASOURCE_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}
SPRING_DATASOURCE_USERNAME=${DB_USER}
SPRING_DATASOURCE_PASSWORD=${DB_PASSWORD}
SPRING_JPA_HIBERNATE_DDL_AUTO=none

# --- Flyway/Liquibase ---
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_LOCATIONS=classpath:database/sql

# --- Logging ---
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_INTERCRED=DEBUG
LOGGING_PATTERN_CONSOLE=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
LOGGING_FILE_NAME=_temp/logs/intercred-backend.log
LOGGING_FILE_PATH=_temp/logs
LOGGING_FORMAT=json

# --- OpenAPI/Swagger ---
SWAGGER_ENABLED=true

# --- Security / Auth ---
# Choose one: jwt, oauth2, keycloak
AUTH_TYPE=jwt
JWT_SECRET=changeme
JWT_EXPIRATION_MS=3600000

# --- Internationalization ---
SPRING_MESSAGES_BASENAME=messages

# --- Observability ---
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=*
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# --- CORS ---
CORS_ALLOWED_ORIGINS=http://localhost:5173

# --- Other ---
# Add any other environment variables as needed

# === Frontend Environment Variables (for reference, see frontend/.env.example) ===

# --- Required for CI/CD ---
# Used by GitHub Actions and Docker Compose
CI=true

# --- Documentation ---
# For more details, see infrastructure/README.md and README.md

